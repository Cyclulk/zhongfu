{% endblock %}


{% block content %}
  <section id="contentbody">
    <div class="container">
      <div class="row">

        <div class=" col-sm-12 col-md-5 col-lg-5">
          <div class="row">
        {% block leftbar %}

        {% endblock leftbar %}
          </div>
        </div>

        <div class="col-sm-6 col-md-2 col-lg-2">
          <div class="row">
