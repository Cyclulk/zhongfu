{% extends "ZhongfuBlogBundle::layout.html.twig" %}

{% block banner %}
    {{ render(controller("ZhongfuBlogBundle:Includes:carousel")) }}
{% endblock %}


{% block content %}
    <section id="contentbody">
        <div class="container">
            <div class="row">
                {% block titrePage %}
                {% endblock titrePage %}

                <div class=" col-sm-12 col-md-5 col-lg-5">
                    <div class="row">
                        {% block leftbar %}

                        {% endblock leftbar %}
                    </div>
                </div>

                <div class="col-sm-6 col-md-2 col-lg-2">
                    <div class="row">
                        {% block middlebar %}
                        {% endblock middlebar %}
                    </div>
                </div>

                <div class="col-sm-6 col-md-5 col-lg-5">
                    <div class="row">
                        <div class="rightbar_content">
                            {% block evenements %}
                            {% endblock evenements %}

                            {% block popular %}
                            {% endblock popular %}

                            {% block popularTags %}
                            {% endblock popularTags %}
                            <!-- End Popular Posts -->
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

{% endblock %}