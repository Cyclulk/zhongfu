<div id="myCarousel" class="carousel slide hidden-sm" data-ride="carousel">
    <!-- Indicators -->
    {% for post in posts %}
        <ol class="carousel-indicators">
            <li data-target="#myCarousel" data-slide-to="{{ loop.index0 }}"
                {% if loop.index0 == 0 %}class="active" {% endif %}></li>
        </ol>
    {% endfor %}

    <!-- Wrapper for slides -->
    <div class="panel" id="en-vedette">
        <div class="panel-body">
        <div class="carousel-inner carousel-vedette" role="listbox">
            {% for post in posts %}
                <div class=" carousel-vedette-item item {% if loop.index0 == 0 %}active{% endif %}">
                    <img src="{{ asset(post.avatar.miniUrl) }}" alt="{{ post.avatar.name }}">
                    <h3 class="">{{ post.titre }}</h3>
                    <p>{{ post.slug }}</p>
                </div>
            {% endfor %}
        </div>
        </div>
    </div>
    <!-- Left and right controls -->
    <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>