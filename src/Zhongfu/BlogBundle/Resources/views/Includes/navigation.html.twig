                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">Liens</a>
                        <ul class="dropdown-menu" role="menu">
                            {% for link in links %}
                            <li><a href="{{ link.url }}"><strong>{{ link.name }}</strong>: {{ link.description }} </a></li>
                            {% endfor %}
                        </ul>
                    </li>

                    <li data-toggle="modal" data-target="#ContactModal"  style="cursor: pointer"><a>Contact</a></li>
