            <div id="navbar" class="navbar-collapse collapse">
                <ul class="nav navbar-nav custom_nav">
                    <li class=""><a href="{{ path ('_homepage') }}">Accueil</a></li>
                    <li data-toggle="modal" data-target="#CoursModal" style="cursor: pointer"><a>Cours à l'année</a></li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">Categories</a>
                        <ul class="dropdown-menu" role="menu">
                            {% for category in types %}
                                <li>
